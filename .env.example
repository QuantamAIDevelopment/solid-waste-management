# SWM Geospatial AI Route Optimizer Configuration

# =============================================================================
# SWM API Configuration (Required)
# =============================================================================
# Main SWM API endpoint
SWM_API_BASE_URL=https://uat-swm-main-service-hdaqcdcscbfedhhn.centralindia-01.azurewebsites.net

# Authentication credentials for SWM API
SWM_USERNAME=your_username_here
SWM_PASSWORD=your_password_here

# Optional: Pre-generated token (auto-managed by AuthService)
# SWM_TOKEN=auto_generated_jwt_token

# =============================================================================
# Application Configuration
# =============================================================================
# Development mode (enables detailed logging)
DEBUG=true

# API server configuration
API_HOST=127.0.0.1
API_PORT=8081

# API security key for endpoint authentication
API_KEY=swm-2024-secure-key

# =============================================================================
# External Services Configuration
# =============================================================================
# OSRM routing service (for turn-by-turn directions)
OSRM_URL=http://router.project-osrm.org
# OSRM_URL=http://localhost:5000  # For local OSRM server

# Optional: Database configuration (PostGIS support)
# DATABASE_URL=postgresql://user:password@localhost:5432/swm_routes_db
# DATABASE_URL=sqlite:///./swm_routes.db

# =============================================================================
# Route Optimization Settings
# =============================================================================
# Maximum buildings per vehicle trip
MAX_HOUSES_PER_TRIP=100

# Maximum trips per vehicle per day
MAX_TRIPS_PER_DAY=2

# VRP solver timeout (seconds)
ROUTE_OPTIMIZATION_TIMEOUT=300

# Clustering algorithm (kmeans or dbscan)
DEFAULT_CLUSTER_METHOD=kmeans

# Maximum vehicles per ward for optimization
MAX_VEHICLES_PER_WARD=10

# =============================================================================
# File Paths (Default Locations)
# =============================================================================
DEFAULT_ROADS_PATH=data/roads.geojson
DEFAULT_BUILDINGS_PATH=data/buildings.geojson
DEFAULT_VEHICLES_PATH=data/vehicles.csv
DEFAULT_OUTPUT_DIR=output

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (auto-created)
LOG_FILE=logs/swm_optimizer.log

# =============================================================================
# Map Visualization Settings
# =============================================================================
# Default map center (Nairobi, Kenya coordinates)
DEFAULT_MAP_CENTER_LAT=-1.2921
DEFAULT_MAP_CENTER_LON=36.8219
DEFAULT_MAP_ZOOM=12

# =============================================================================
# Performance & Caching Settings
# =============================================================================
# Enable response caching
ENABLE_CACHING=true

# Cache time-to-live (seconds)
CACHE_TTL=3600

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Token refresh interval (minutes)
TOKEN_REFRESH_INTERVAL=5

# =============================================================================
# Development & Testing Settings
# =============================================================================
# Random seed for reproducible results
RANDOM_SEED=42

# Enable development features
DEV_MODE=true

# Test data directory
TEST_DATA_DIR=tests/data