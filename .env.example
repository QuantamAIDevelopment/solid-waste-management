# Geospatial Route Optimization Configuration

# OSRM Configuration
OSRM_URL=http://router.project-osrm.org
# OSRM_URL=http://localhost:5000  # For local OSRM server

# API Configuration
API_HOST=127.0.0.1
API_PORT=8081

# Database Configuration (if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/routes_db
# DATABASE_URL=sqlite:///./routes.db

# Live Vehicle API Configuration
VEHICLE_API_URL=https://api.example.com/vehicles
VEHICLE_API_KEY=your_api_key_here
VEHICLE_API_TIMEOUT=30

# File Paths (default locations)
DEFAULT_ROADS_PATH=data/roads.geojson
DEFAULT_BUILDINGS_PATH=data/buildings.geojson
DEFAULT_VEHICLES_PATH=data/vehicles.csv
DEFAULT_OUTPUT_DIR=output

# Clustering Configuration
MAX_VEHICLES_PER_WARD=10
DEFAULT_CLUSTER_METHOD=kmeans
# DEFAULT_CLUSTER_METHOD=dbscan

# Route Optimization Settings
MAX_HOUSES_PER_TRIP=100
MAX_TRIPS_PER_DAY=2
ROUTE_OPTIMIZATION_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Map Configuration
DEFAULT_MAP_CENTER_LAT=-1.2921
DEFAULT_MAP_CENTER_LON=36.8219
DEFAULT_MAP_ZOOM=12

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=10